{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 400,
    "background": "ghostwhite",
    "title": { "text": "Average net salary by countries" },
    "data": {
      "url": "https://raw.githubusercontent.com/AndyIsHigh/FIT3179_A2/54f368ef5f68756e95231589b13eda714a07212b/Cost_of_living.csv"
    },
    "mark": { "type": "bar", "size": 80, "color": "orange" },
    "transform": [
      {
        "calculate": "datum.Apt_Center * 1950 / (datum.Average_monthly_net_salary - datum.in_monthly_approx_spend)",
        "as": "num"
      },
      {"filter": "datum.num < 1000"}
    ],
    "encoding": {
      "x": { "field": "City", "type": "nominal", "title": "Cities", "sort": "descending" },
      "y": { "field": "num", "type": "quantitative", "title": "Number of months" },
      "tooltip": [
        { "field": "Country", "type": "nominal" },
        { "field": "City", "type": "nominal" },
        { "field": "Average_monthly_net_salary", "type": "quantitative" }
      ]
    },
    "config": {
      "axis": {
        "labelFont": "Arial",
        "labelFontSize": 14,
        "titleFontSize": 16,
        "labelFontWeight": "normal"
      },
      "title": {
        "font": "Arial",
        "fontSize": 21,
        "fontWeight": "bold"
      }
    }
  }
  