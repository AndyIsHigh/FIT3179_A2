{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "McMeal Price Around the Globe",
    "width": 600,
    "height": 500,
    "background": "ghostwhite",
    "projection": {
      "type": "equalEarth"
    },
    "layer": [
      {
        "data": {
          "url": "https://raw.githubusercontent.com/AndyIsHigh/FIT3179_A2/53d66847c2f199fb19985a0d736f10e91938748b/ne_110m_admin_0_countries.json",
          "format": {
            "type": "topojson",
            "feature": "ne_110m_admin_0_countries"
          }
        },
        "transform": [
          {
            "calculate": "'Data is not available in ' + datum.properties.NAME",
            "as": "note"
          }
        ],
        "mark": {
          "type": "geoshape",
          "stroke": "white",
          "strokeDash": [1, 1],
          "fill": "#D3D3D3"
        },
        "encoding": {
          "color": {
            "value": "#D3D3D3"
          },
          "tooltip": { "field": "note" }
        }
      },

      {
        "data": {
          "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/7_others/oceans.topojson",
          "format": {"type": "topojson", "feature": "oceans"}
        },
        "mark": {"type": "geoshape", "fill": "ghostwhite"}
      },
      {
        "data": {
          "url": "https://raw.githubusercontent.com/AndyIsHigh/FIT3179_A2/53d66847c2f199fb19985a0d736f10e91938748b/ne_110m_admin_0_countries.json",
          "format": {
            "type": "topojson",
            "feature": "ne_110m_admin_0_countries"
          }
        },

        "transform": [
          {
            "lookup": "properties.NAME",
            "from": {
              "data": {
                "url": "https://raw.githubusercontent.com/AndyIsHigh/FIT3179_A2/main/COL_aggregated.csv"
              },
              "key": "Country",
              "fields": ["McMeal"]
            }
          }
        ],
        "mark": "geoshape",
        "encoding": {
          "color": {
            "field": "McMeal", 
            "type": "quantitative",
            "scale": {
              "scheme": "orangered"
            },
            "title": "McMeal price (USD)"
          },
          "tooltip": [
            {"field": "properties.NAME", "type": "nominal", "title": "Country"},
            {"field": "McMeal", "type": "quantitative", "format": ".2f", "title": "McMeal price (USD)"}
          ]
        }
      },
      {
        "data": {
          "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/2_symbol_map/js/WorldMapWithGraticules.topojson",
          "format": { "type": "topojson", "feature": "ne_110m_graticules_30" }
        },
        "mark": {
          "type": "geoshape",
          "stroke": "black",
          "strokeDash": [1, 2],
          "fill": null
        }
      },
      {
        "data": {
          "values": [
            {
              "value": "Switzerland",
              "latitude": 46.8182,
              "longitude": 8.2275,
              "label": "Switzerland boasts the distinction of "
            },
            {
              "country": "Switzerland2",
              "latitude": 40.8182,
              "longitude": 8.2275,
              "label": "having the most costly McDonald Meal."
            },
            {
              "country": "Indonesia",
              "latitude": -3,
              "longitude": 80.92,
              "label": "Indonesia is renowned for its "
            },
            {
              "country": "Indonesia2",
              "latitude": -9,
              "longitude": 80.92,
              "label": "exceptionally budget-friendly McDonald Meals."
            }
          ]
        },
        "mark": {
          "type": "text",
          "align": "left",
          "baseline": "middle",
          "dx": 0,
          "dy": 13,
          "fontSize": 11,
          "fontWeight": "bold",
          "fill":"navy"
        },
        "encoding": {
          "longitude": { "field": "longitude", "type": "quantitative" },
          "latitude": { "field": "latitude", "type": "quantitative" },
          "text": { "field": "label", "type": "nominal" }
        }
      }
    ]
  }